{
    "name": "Plutus Starter Project",
    "image": "plutus-devcontainer:latest",
    
    "mounts": [
        // FIXME: this doesn't work, it still uses "my" home dir in the container, despite
        // there being no mention of my username and 'whoami' saying 'root'
        "source=${localEnv:HOME}/.cabal,target=/root/.cabal,type=bin,consistency=cached",
    ],

    "settings": {
        // Note: don't change from bash so it runs .bashrc
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    
    // IDs of extensions inside container
    "extensions": [
        "haskell.haskell"
    ],
}
